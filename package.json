{
  "name": "matt-varghese-minimal-typescript-react-template",
  "displayName": "Matt Varghese's Minimal TypeScript React Project Template",
  "contributors": [
    "Matt | Varghese Mathew"
  ],
  "homepage": "https://mattvarghese.github.io/minimal-typescript-react-template/",
  "version": "1.0.0",
  "description": "Matt Varghese's Minimal TypeScript React Project Template",
  "main": "index.tsx",
  "scripts": {
    "test": "npm run build && jest",
    "start": "npm install && webpack serve --mode development --hot --open",
    "build": "npm install && webpack --config webpack.config.js --mode production",
    "serve": "npm run build && serve -s dist",
    "clean": "npm install -D typescript && npx --package typescript tsc clean-all.ts && node clean-all.js",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d ./dist"
  },
  "author": "Matt | Varghese Mathew",
  "license": "GPL v3",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@jest/types": "^27.4.2",
    "@types/node": "^17.0.18",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "babel-loader": "^8.2.3",
    "css-loader": "^6.5.1",
    "file-loader": "^6.2.0",
    "gh-pages": "^3.2.3",
    "html-webpack-plugin": "^5.5.0",
    "serve": "^13.0.2",
    "style-loader": "^3.3.1",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.3"
  }
}
